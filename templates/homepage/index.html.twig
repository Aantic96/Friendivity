{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    {% if not app.user %}
        <div class="mb-3">
            <p>Already have an account? Login in <a href="{{ path('app_login') }}">here</a></p>
            <p>New to our site? <a href="{{ path('app_register') }}">Register now!</a>
        </div>
    {% endif %}

    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/Friendivity/src/Controller/HomepageController.php</code></li>
        <li>Your template at <code>/var/www/Friendivity/templates/homepage/index.html.twig</code></li>
    </ul>
</div>
{% endblock %}
